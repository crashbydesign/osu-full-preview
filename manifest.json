{
	"manifest_version": 3,
	"name": "osu! Full Preview",
	"version": "1.0.0",
	"description": "Shows the currently playing osu! preview song.",
	"permissions": ["storage"],
	"host_permissions": [
		"https://osu.ppy.sh/*",
		"https://catboy.best/*",
		"https://central.catboy.best/*",
		"https://us.catboy.best/*",
		"https://sg.catboy.best/*"
	],
	"icons": {
		"16": "images/icon.png",
		"32": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "images/icon.png",
			"32": "images/icon.png",
			"48": "images/icon.png",
			"128": "images/icon.png"
		}
	},

	"content_scripts": [
		{
			"matches": ["*://osu.ppy.sh/*"],
			"js": ["scripts/content.js"],
			"run_at": "document_start"
		}
	]
}
